@page "/about-us"
@using Microsoft.AspNetCore.Components

<PageTitle>About Us</PageTitle>

<div class="container mt-5 p-4" style="background-color: rgba(255, 255, 255, 0.8); border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="row justify-content-center text-center">
        <div class="col-lg-8">
            <h1 class="display-4" style="font-family: 'Georgia', serif; font-weight: bold; color: #8B171A;">
                About RecipeVault
            </h1>
            <p class="lead mt-4" style="font-family: 'Georgia', serif; color: #333;">
                Welcome to RecipeVault, where culinary creativity meets convenience. Our mission is to bring people together through food, by sharing recipes from around the world. Whether you're a beginner or a seasoned chef, we offer a platform for you to explore, create, and share delicious recipes.
            </p>
        </div>
    </div>
    <div class="row text-center mt-5">
        <div class="col-md-4">
            <img src="/Images/community.jfif" class="img-fluid rounded-circle" alt="Community" style="max-width: 180px; height:160px">
            <h3 class="mt-3" style="font-family: 'Georgia', serif; color: #8B171A;">Our Community</h3>
            <p style="color: #333;">We foster a community where food enthusiasts can connect, share, and learn from each other.</p>
        </div>
        <div class="col-md-4">
            <img src="/Images/recipes.jfif" class="img-fluid rounded-circle" alt="Recipes" style="max-width: 180px;height:160px">
            <h3 class="mt-3" style="font-family: 'Georgia', serif; color: #8B171A;">Explore Recipes</h3>
            <p style="color: #333;">Discover thousands of recipes curated by our community, from appetizers to desserts.</p>
        </div>
        <div class="col-md-4">
            <img src="/Images/mission.jfif" class="img-fluid rounded-circle" alt="Mission" style="max-width: 180px;height:160px">
            <h3 class="mt-3" style="font-family: 'Georgia', serif; color: #8B171A;">Our Mission</h3>
            <p style="color: #333;">We aim to make cooking easy and fun, with accessible recipes and tools for every home chef.</p>
        </div>
    </div>
</div>

