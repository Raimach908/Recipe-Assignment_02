@page "/"
@using Microsoft.AspNetCore.Components

<PageTitle>Home</PageTitle>

<div class="container-fluid p-0 overlay" style="background-position: center; height: 100vh;">
    <div class="d-flex flex-column justify-content-center align-items-center text-center" style="height: 100%;">
        <h1 class="display-3 text-white" style="font-family: 'Georgia', serif; font-weight: bold;">
            Welcome to RecipeVault
        </h1>
        <p class="lead text-white" style="font-family: 'Georgia', serif;">
            We believe good food brings great smiles.
        </p>

        <a href="/recipeList" class="btn btn-lg mt-4" style="font-family: 'Georgia', serif; font-weight: bold; background-color: #8B171A; color: white">
            Explore Recipes
        </a>
    </div>
</div>

<div class="container my-5">
    <div class="row text-center">
        <h1 class="display-3 mb-4" style="font-family: 'Georgia', serif; font-size: 34px; color: white; background-color: #8B171A; border-block:solid; font-weight: bold;">Why Choose RecipeVault?</h1>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-utensils fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Variety of Recipes</h5>
                    <p class="card-text">Explore a diverse range of recipes from different cuisines, carefully curated for food enthusiasts.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-heart fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Handpicked by Experts</h5>
                    <p class="card-text">Our recipes are selected by culinary experts to ensure you always get the best flavor.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-thumbs-up fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">User-Friendly</h5>
                    <p class="card-text">Easily search, save, and share your favorite recipes with an intuitive interface.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4" style="font-family: 'Georgia', serif;font-size: 34px; color: white; background-color: #8B171A; border-block:solid; font-weight: bold; font-weight: bold;">Featured Recipes</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm" style="height: 100%;">
                <img src="Images/spaghetti.jfif" class="card-img-top fixed-img-size" alt="Recipe 1">
                <div class="card-body">
                    <h5 class="card-title">Spaghetti Carbonara</h5>
                    <p class="card-text">A classic Italian pasta dish made with eggs, cheese, pancetta, and pepper.</p>
                    <a href="/recipeDetails/9" class="btn btn-danger">View Recipe</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm" style="height: 100%;">
                <img src="images/grilled.jfif" class="card-img-top fixed-img-size" alt="Recipe 2">
                <div class="card-body">
                    <h5 class="card-title">Grilled Chicken Salad</h5>
                    <p class="card-text">A healthy and delicious salad with grilled chicken, fresh veggies, and a light dressing.</p>
                    <a href="/recipeDetails/7" class="btn btn-danger">View Recipe</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm" style="height: 100%;">
                <img src="images/cake.jfif" class="card-img-top fixed-img-size" alt="Recipe 3">
                <div class="card-body">
                    <h5 class="card-title">Chocolate Cake</h5>
                    <p class="card-text">A rich and moist chocolate cake that's perfect for any occasion.</p>
                    <a href="/recipeDetails/8" class="btn btn-danger">View Recipe</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid py-5 bg-dark text-white">
    <div class="container text-center">
        <h2 class="mb-4" style="font-family: 'Georgia', serif;">Join Our Community</h2>
        <p class="lead mb-4">Sign up now to save your favorite recipes, share your culinary creations, and connect with fellow food lovers!</p>
        <a href="recipeList" class="btn btn-danger btn-lg" style="font-family: 'Georgia', serif;">Get Started</a>
    </div>
</div>

<style>
/*      .overlay {
         background-color: rgba(0, 0, 0, 0.5);
         background-size: cover;
         background-repeat: no-repeat;
     } */

    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-10px);
        }

    /* Ensures all images have the same size */
    .fixed-img-size {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    /* Ensure cards have a consistent height */
    .card {
        height: 100%;
    }
</style>
